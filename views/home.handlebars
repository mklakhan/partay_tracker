<div class="container">
    <div style="margin-top: 100px;" class="jumbotron">
        <button class="btn btn-default"><a href="/createpartay">CREATE PARTAY</a></button>
        <h1 id="partay-name" style="font-weight: 900;">Your Parties!!</h1>
        <div class="row">
            <div style="width: 100%; height: 100%;" class="col-sm-6 col-md-4">
                {{#each partayData}}
                    <div class="thumbnail">
                        <h2 style="padding: 9px; text-decoration: underline;">{{partay_name}}</h2>
                        <img style="padding: 9px;"
                            src="https://blog.trello.com/hubfs/celebrate%20wins%20and%20failures%20with%20a%20team.png"
                            alt="...">
                        <div class="caption">
                            <p><b>When is this happening: </b>{{partay_date}}</p>
                            <p><b>What time is this at: </b>{{partay_time}}</p>
                            <p><b>Where is this at: </b>{{partay_location}}</p>
                            <p>
                                <a href="http://localhost:8080/partays/{{id}}" class="btn btn-primary" role="button">View Partayyy</a>
                            </p>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
