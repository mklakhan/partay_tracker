<div class="container">
    <div class="col-md-12 mb-3">
        <p style="color: white; font-weight: 900; font-size: 400%">Welcome <span class="member-name"></span></p>
    </div>
    <div style="margin-top: 100px;" class="jumbotron">
        <div class="row">
        </div>
        <a class="btn btn-info" href="/createpartay">CREATE PARTAY</a>
        <h1 id="partay-name" style="font-weight: 900; font-size: 300%">All Listed Partays!</h1>
        <div class="row">
            <div style="width: 100%; height: 100%;" class="col-sm-6 col-md-4">
                {{#each partayData}}
                <div class="thumbnail">
                    <h2 style="padding: 9px; text-decoration: underline;">{{partay_name}}</h2>
                    {{!-- <img style="padding: 9px; height: 100%; width: 100%;" src="{{partay_image}}"
                        alt="Partay Image"> --}}
                    <div class="caption">
                        <p><b>When is this happening: </b>{{partay_date}}</p>
                        <p><b>What time is this at: </b>{{partay_time}}</p>
                        <p><b>Where is this at: </b>{{partay_location}}</p>
                        <button value="{{id}}" type="button" class="btn btn-danger attend">ATTEND PARTAY</button>
                        <a href="/partays/{{id}}" class="btn btn-success" role="button">VIEW PARTAY</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="/js/home.js"></script>